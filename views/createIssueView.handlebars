<body>
<h1>Create Issue</h1>
<form id="issueForm" class="form-horizontal" >

    <fieldset>
        <!-- Summary Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="summary">Summary</label>
            <div class="col-md-4">
                <input type="text" id="summary" name="summary" placeholder="Application Crash on saving of creating a new user" class="form-control input-md"  required/>
            </div>
        </div>

        <!-- Priority Drop Down -->
        <div class="form-group">
            <label class="col-md-4 control-label">Priority</label>
            <div class="col-md-4">
                <select name="colors" class="form-control" title="Your mom">
                    <option value="low">Low</option>
                    <option value="moderate">Moderate</option>
                    <option value="major">Major</option>
                    <option value="critical">Critical</option>

                </select>
            </div>
        </div>

        <!-- Severity Drop Down -->
        <div class="form-group">
            <label class="col-md-4 control-label">Priority</label>
            <div class="col-md-4">
                <select name="colors" class="form-control" title="Your mom">
                    <option value="low">Low</option>
                    <option value="moderate">Moderate</option>
                    <option value="major">Major</option>
                    <option value="critical">Critical</option>
                </select>
            </div>
        </div>

        <!-- Description Textarea -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="description">Description</label>
            <div class="col-md-4">
                <textarea class="form-control" id="description" name="description"></textarea>
            </div>
        </div>

        <!-- Save Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="save"></label>
            <div class="col-md-4">
                <button id="save" name="save" class="btn btn-primary">Save</button>
            </div>
        </div>

    </fieldset>
</form>

</body>

