<table class="pure-table pure-table-striped">
    <caption>JSON object from server</caption>
    <thead>
    <tr>
        <th>Record Number</th>
        <th>Name</th>
        <th>Age</th>
    </tr>
    </thead>

    <tbody>
    <!--iterate through each record from the myData JSON object passed in from the sampleData route-->
    {{#each myData}}
        <tr>
            <td>{{addOne @index}}</td>
            <td>{{this.name}}</td>
            <td>{{this.age}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>

<div>
    <div class="table-responsive">
        <table class="table table-condensed">
            <caption>MySQL query results</caption>
            <thead>
            <tr>
                <!--<th>Record Number</th>-->
                <th>Car</th>
                <th>Color</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {{#each dbData}}
                <tr>
                    <!--<td>{{addOne @index}}</td>-->
                    <td>{{this.car}}</td>
                    <td>{{this.color}}</td>
                    <td>
                        <a href="/sample-data/edit/{{this.idsample}}">Edit</a>
                        <a href="/sample-data/delete/{{this.idsample}}">Delete</a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
            <tfooter>
                <tr><td>
                    <button class="btn btn-primary"
                            onClick="addCar();">Add</button>
                </td></tr>
            </tfooter>
        </table>
    </div>
</div>

