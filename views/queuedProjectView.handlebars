

<div class="container">
  <ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/queued">Queued</a></li>
    <li class="active">Project: {{this.project_name}}</li>
  </ol>
  <div class="row">
    <div class="col-xs-6 col-sm-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Backlog</h3>
        </div>
        <div id="backlog_sortlist" class="list-group connectedSortable">
          {{#each backlog}}
          <a href="/queued/project/{{this.projectId}}/{{this.storyId}}" class="list-group-item">
            <p>
              <span class="label label-success label-{{this.priority}} pull-right">&nbsp;</span>
              {{this.title}}
            </p>
            <div class="clearfix"></div>
          </a>
          {{/each}}
        </div>
        <a class="text-muted" href="/queued/project/{{this.projectId}}/story-create">
          <div class="panel-footer">
            Add a Story
          </div>
        </a>
      </div>
    </div>
    <div class="col-xs-6 col-sm-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Current</h3>
        </div>
        <div id="current_sortlist" class="list-group connectedSortable">
          {{#each current}}
          <a href="/queued/project/{{this.projectId}}/{{this.storyId}}" class="list-group-item">
            <p>
              <span class="label label-success label-{{this.priority}} pull-right">&nbsp;</span>
              {{this.title}}
            </p>
            <div class="clearfix"></div>
          </a>
          {{/each}}
        </div>
        <a class="text-muted" href="/queued/project/{{this.projectId}}/story-create">
          <div class="panel-footer">
            Add a Story
          </div>
        </a>
      </div>
    </div>

    <!-- Add the extra clearfix for only the required viewport -->
    <div class="clearfix visible-xs-block"></div>

    <div class="col-xs-6 col-sm-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Done</h3>
        </div>
        <div id="done_sortlist" class="list-group connectedSortable">
          {{#each done}}
          <a href="/queued/project/{{this.projectId}}/{{this.storyId}}" class="list-group-item">
            <p>
              <span class="label label-success label-{{this.priority}} pull-right">&nbsp;</span>
              {{this.title}}
            </p>
            <div class="clearfix"></div>
          </a>
          {{/each}}
        </div>
        <a class="text-muted" href="/queued/project/{{this.projectId}}/story-create">
          <div class="panel-footer">
            Add a Story
          </div>
        </a>
      </div>
    </div>
    <div class="col-xs-6 col-sm-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Release</h3>
        </div>
        <div id="release_sortlist" class="list-group connectedSortable">
          {{#each release}}
          <a href="/queued/project/{{this.projectId}}/{{this.storyId}}" class="list-group-item">
            <p>
              <span class="label label-success label-{{this.priority}} pull-right">&nbsp;</span>
              {{this.title}}
            </p>
            <div class="clearfix"></div>
          </a>
          {{/each}}
        </div>
        <a class="text-muted" href="/queued/project/{{this.projectId}}/story-create">
          <div class="panel-footer">
            Add a Story
          </div>
        </a>
      </div>
    </div>
    <div class="col-xs-12">
      <a class="btn btn-success" href="/queued/project/{{this.projectId}}/story-create">Add a Story</a>
    </div>
  </div>
</div>
