<!---
    Create Story View

    Requirement:
        - shall be able to add a new story
            - following parameters:
                - storyID
                - projectID
                - description
                - title
                - story_status
                - assignee
                - type
                - priority

        - DB Design:
        https://my.vertabelo.com/model/T7GMpn8wYb4zZbMYvIlF1Xinn4L9GrYk
!-->
<h1>Create a Story</h1>
<h3>Project Id: {{this.projectId}}</h3>

<form id="storyForm" class="form-horizontal" method="post" action="/requirements/project/{{this.projectId}}/story-create">

    <fieldset>
        <!-- Title Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="title">Title</label>
            <div class="col-md-4">
                <input type="text" id="title" name="title" placeholder="add a requirement here" class="form-control input-md"  required/>
            </div>
        </div>

        <!-- Priority Drop Down -->
        <div class="form-group">
            <label class="col-md-4 control-label">Priority</label>
            <div class="col-md-4">
                <select name="priority" class="form-control" title="priority">
                    <option value="0" {{#if_equals data.priority 0 }}selected{{/if_equals}}>Low</option>
                    <option value="1" {{#if_equals data.priority 1 }}selected{{/if_equals}}>Medium</option>
                    <option value="2" {{#if_equals data.priority 2 }}selected{{/if_equals}}>High</option>
                    <option value="3" {{#if_equals data.priority 3 }}selected{{/if_equals}}>Urgent</option>
                </select>
            </div>
        </div>

        <!-- Status Drop Down -->
        <div class="form-group">
            <label class="col-md-4 control-label">Status</label>
            <div class="col-md-4">
                <select name="story_status" class="form-control" title="story_status">
                    <option value="New" {{#if_equals data.story_status "New" }}selected{{/if_equals}}>New</option>
                    <option value="Assigned" {{#if_equals data.story_status "Assigned" }}selected{{/if_equals}}>Assigned</option>
                    <option value="In Progress" {{#if_equals data.story_status "In Progress" }}selected{{/if_equals}}>In Progress</option>
                    <option value="Deployment" {{#if_equals data.story_status "Deployment" }}selected{{/if_equals}}>Deployment</option>
                    <option value="Testing" {{#if_equals data.story_status "Testing" }}selected{{/if_equals}}>Testing</option>
                    <option value="Resolved" {{#if_equals data.story_status "Resolved" }}selected{{/if_equals}}>Resolved</option>
                    <option value="Closed" {{#if_equals data.story_status "Closed" }}selected{{/if_equals}}>Closed</option>
                    <option value="Reopened" {{#if_equals data.story_status "Reopened" }}selected{{/if_equals}}>Reopened</option>
                    <option value="Rejected" {{#if_equals data.story_status "Rejected" }}selected{{/if_equals}}>Rejected</option>
                </select>
            </div>
        </div>

        <!-- Description Text Area -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="description">Description</label>
            <div class="col-md-4">
                <textarea class="form-control" id="description" name="description"></textarea>
            </div>
        </div>

        <!-- Save Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="save"></label>
            <div class="col-md-4">
                <button id="save" name="save" class="btn btn-primary">Save</button>
            </div>
        </div>

    </fieldset>
</form>
